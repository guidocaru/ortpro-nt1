<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ORTPro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Home" asp-action="Index"><span class="fas fa-house-door fa-sm"></span>Inicio</a>
                </li>
            </ul>
        </div>
        <div class="mx-auto order-0">
            <img class="navbar-brand mx-auto" id="imgBarra" src="/img/logo2.png" alt="" />
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Profesionales" asp-action="Buscador"><span class="bi bi-search"></span>Buscador</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href=""><span class="bi bi-envelope"></span>Contacto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Profesionales" asp-action="Index"><span class="bi bi-gear"></span>Administrador</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <img src="/img/logo2.png" class="logo2" />
                    <p class="text-justify">
                        ORTPro - Conectamos necesidades con soluciones.
                    </p>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Producto</h6>
                    <ul class="footer-links">
                        <li>
                            <a>Política de privacidad</a>
                        </li>
                        <li>
                            <a>Términos y condiciones</a>
                        </li>
                        <li>
                            <a>Política de devolución</a>
                        </li>
                    </ul>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>Nosotros</h6>
                    <ul class="footer-links">
                        <li><a>Equipo</a></li>
                        <li><a>Contacto</a></li>
                        <li>
                            <a>Nuestra historia</a>
                        </li>
                    </ul>
                </div>
            </div>
            <hr />
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <p class="copyright-text">
                        Copyright &copy; 2021. Todos los derechos reservados por Grupo 9.
                    </p>
                </div>

                <div class="col-md-4 col-sm-6 col-xs-12">
                    <ul class="social-icons">
                        <li>
                            <a class="github" href="#">
                                <i class="fa fa-github"></i>
                            </a>
                        </li>
                        <li>
                            <a class="facebook" href="#"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li>
                            <a class="twitter" href="#"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li>
                            <a class="instagram" href="#"><i class="fa fa-instagram"></i></a>
                        </li>
                        <li>
                            <a class="linkedin" href="#"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<style>
    .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        background: white;
        padding: 20px 0;
        position: fixed;
        text-align: left;
        font: normal normal bold 14px/16px Helvetica;
        letter-spacing: 0.14px;
        color: #5B5B5F;
        z-index: 100;
    }

    .nav__logo {
        width: 25%;
        margin-left: 50px;
    }

        .nav__logo img {
            width: 120px;
        }

    .nav__menu {
        width: 75%;
    }

        .nav__menu .nav__list {
            display: flex;
            justify-content: end;
            align-items: center;
            list-style-type: none;
        }

    .nav__list a img {
        width: 40px;
    }

    .nav__item {
        width: 100%;
    }

        .nav__item a {
            text-decoration: none;
            position: relative;
            margin-right: 150px;
            font-size: 15px;
            color: inherit;
        }

            .nav__item a::selection {
                transition: 0.5s;
            }

            .nav__item a:before {
                content: '';
                background: rgb(197, 197, 197);
                width: 180px;
                height: 1px;
                position: absolute;
                bottom: -5px;
                left: 0;
            }

            .nav__item a:hover::after {
                width: 55px;
            }

            .nav__item a:after {
                content: '';
                background: rgb(39, 39, 39);
                width: 30px;
                height: 4px;
                position: absolute;
                bottom: -5px;
                left: 0;
                transition: 0.5s;
            }
</style>